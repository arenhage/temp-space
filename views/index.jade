extends layout
block content
	script(src='/js/index.js', type='text/javascript')
	
	div.jumbotron
		div.container
			img(src="/images/logo.png" alt="Responsive image" height="160" width="160").img-responsive.center-block
			div.row
				div.col-md-6.col-md-offset-3
					blockquote <strong>#{title}</strong> is an on the fly, easy to use content sharing agent which allows you to upload and share files on a sharable space
		
	div.container
		div.row
			div.col-md-12
				div.input-group.input-group-lg.col-md-6.col-md-offset-3
					span.input-group-addon #
					input(type="text" placeholder="identifier" id="identifier_in").form-control
					span.input-group-btn
						button.btn.btn-default(type="button" onclick='Index.setRandomIdentifier("identifier_in")')
							span.glyphicon.glyphicon-refresh
						button.btn.btn-default(type="button") Go!