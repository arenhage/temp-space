<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		
		<!-- jquery -->
		<script type="text/javascript" src='/js/lib/jquery-1.11.1.min.js'></script>
		
		<!-- bootstrap -->
		<link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
		<link rel='stylesheet' href='/stylesheets/sticky-footer-navbar.css' />
		<script type="text/javascript" src='/js/lib/bootstrap.min.js'></script>
		
		<!-- dropzone -->
		<link rel="stylesheet" href="/stylesheets/dropzone/dropzone.css">
		<link rel="stylesheet" href="/stylesheets/dropzone/basic.css">
		<script type="text/javascript" src="/js/lib/dropzone/dropzone.js"></script>
		
		<!-- toastr -->
		<link rel="stylesheet" href="/stylesheets/toastr.min.css">
		<script type="text/javascript" src="/js/lib/toastr.min.js"></script>
		
		<!-- countdown -->
		<script type="text/javascript" src="/js/lib/countdown/jquery.countdown.min.js"></script>
		
		<!-- share-button -->
		<link rel="stylesheet" href="/stylesheets/jquery.share.css">
		<script type="text/javascript" src="/js/lib/jquery.share.js"></script>
		
		<!-- custom -->
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<script src='/js/misc/util.js'></script>
		<script src='/js/misc/temp-space.js'></script>
		<script src='/js/space.js' type='text/javascript'></script>
	</head>
	<body>
		<div class="jumbotron">
			<div class="container">
				<a href="/">
					<img src="/images/logo.png" alt="Responsive image" height="160" width="160" class="img-responsive center-block"></img>
				</a>
				<div class="row">
					<div class="col-md-6 col-md-offset-3">
						<blockquote>
							<strong><%= title %></strong> is an on the fly, easy to use content sharing agent which allows you to upload and share files on a sharable space
						</blockquote>
						<div class="text-center">
							<span id="clock"></span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="operations">
				<span style="cursor:pointer;" class="label label-warning label-spacing" onclick="Util.copyUrlToClipboard();">
					Copy Link
				</span>
				<span style="cursor:pointer;" class="label label-danger pull-right">
					Remove Space
				</span>
			</div>
			<span class="share-button"></span>
			<%if (space != null) { %>
				<div id="simpleUpload">
					<div id="dropzone">
						<form action="/space/file/upload" class="dropzone" id="my-dropzone">
							<input type="hidden" name="spaceId" value="<%= spaceId %>">
						</form>
					</div>
				</div>
			<% } else { %>  
				<h1 class="text-center">Invalid...</h1>
			<% } %>
		</div>
	</body>
	<div id="social-bar" class="social-bar"></div>
	<div class="footer">
		<div class="container">
			<p class="text-muted text-center">
				&copy;&nbsp;
				<a href='#'>Daniel Arenhage</a> 2014
			</p>
		</div>
	</div>
	<script>
		$(document).ready(function() {
			Space.files = <%- files %>;
			Space.initDropzone(Space.files);
			toastr.options.positionClass = 'toast-bottom-right'
			
			var expireAt = <%= expireAt %>;
			$('#clock').countdown(expireAt).on('update.countdown', function(event) {
				var $this = $(this).html(event.strftime(
						'<span class="label label-default">%M</span>' + ' : ' + '<span class="label label-default">%S</span>'
				));
			});
		});
		
		$('#social-bar').share({
			networks: ['email','pinterest','googleplus','digg','facebook','twitter','linkedin'],
	        theme: 'square',
	        urlToShare: 'http://temp-space.ws'
	    });
	</script>
</html>